<local:TabItemContent
             x:Class="PixelArt_Editor.GUI.TabItemContents.InitialTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelArt_Editor.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="112" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="PixelArt Editor" Margin="10,10,10,0" HorizontalContentAlignment="Center" FontSize="32" FontWeight="Bold" Height="57" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="B_new" Content="New picture" Margin="10,0,10,10" FontSize="16" Height="30" VerticalAlignment="Bottom" Click="B_new_Click"/>
        <Button x:Name="B_load" Content="Load picture" Margin="10,0,10,10" Grid.Column="1" Height="30" VerticalAlignment="Bottom" FontSize="16" Click="B_load_Click"/>

    </Grid>
</local:TabItemContent>
