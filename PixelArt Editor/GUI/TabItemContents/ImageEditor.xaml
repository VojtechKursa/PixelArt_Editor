<local:TabItemContent x:Class="PixelArt_Editor.GUI.TabItemContents.ImageEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelArt_Editor.GUI"
             xmlns:Modules="clr-namespace:PixelArt_Editor.GUI.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" GotFocus="ImageEditor_GotFocus">
    <Grid>
        <Modules:ToolbarModule HorizontalAlignment="Right" Margin="0,10,10,10" Width="110"/>

        <Canvas x:Name="Canvas" Margin="10,10,125,10" SizeChanged="Canvas_SizeChanged">
            <Image x:Name="Img_image" MouseDown="Img_image_MouseDown" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</local:TabItemContent>
