<UserControl x:Class="PixelArt_Editor.GUI.Modules.ToolbarModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelArt_Editor.GUI.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="110">
    <Grid>
        <Label Content="Colors" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
        <local:ColorSelectorModule x:Name="CSM_colors" Height="180" VerticalAlignment="Top" Margin="0,31,0,0"/>

        <Label Content="Tools" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="0,216,0,0" VerticalAlignment="Top"/>
        <local:ToolsModule x:Name="TM_tools" Margin="0,247,0,34"/>
        <local:LineWidthModule x:Name="LWM_lineWidth" Height="34" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
