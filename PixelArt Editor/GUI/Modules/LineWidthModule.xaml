<UserControl x:Class="PixelArt_Editor.GUI.Modules.LineWidthModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelArt_Editor.GUI.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="34" d:DesignWidth="190">
    <Grid>
        <Label Content="Line width" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10"/>
        <TextBox x:Name="TB_lineWidth" Text="100" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="10" Height="22" Width="22" TextChanged="TB_lineWidth_TextChanged"/>

        <Slider x:Name="Slider_lineWidth" VerticalAlignment="Center" Height="18" Margin="60,8,25,8" Minimum="1" Maximum="100" SmallChange="1" LargeChange="5" Value="1" ValueChanged="Slider_lineWidth_ValueChanged" />
    </Grid>
</UserControl>
